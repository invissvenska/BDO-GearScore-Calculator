<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="attackAdapter"
            type="nl.invissvenska.bdogearscorecalculator.ui.adapter.BracketAdapter" />

        <variable
            name="defenseAdapter"
            type="nl.invissvenska.bdogearscorecalculator.ui.adapter.BracketAdapter" />

        <variable
            name="attackBracket"
            type="nl.invissvenska.bdogearscorecalculator.util.AttackPowerCalculator" />

        <variable
            name="defenseBracket"
            type="nl.invissvenska.bdogearscorecalculator.util.DefensePowerCalculator" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/medium_margin"
                android:layout_marginBottom="@dimen/small_margin"
                android:gravity="center_horizontal"
                android:text="@string/bracket_label_attack"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5" />

            <com.github.rubensousa.gravitysnaphelper.GravitySnapRecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:adapter="@{attackAdapter}"
                app:adapterBracketList="@{attackBracket.brackets}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:snapEnabled="true"
                app:snapGravity="top"
                app:snapMaxFlingSizeFraction="20"
                app:snapScrollMsPerInch="50"
                tools:listitem="@layout/item_layout" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/medium_margin"
                android:layout_marginBottom="@dimen/small_margin"
                android:gravity="center_horizontal"
                android:text="@string/bracket_label_defense"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5" />

            <com.github.rubensousa.gravitysnaphelper.GravitySnapRecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:adapter="@{defenseAdapter}"
                app:adapterBracketList="@{defenseBracket.brackets}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:snapEnabled="true"
                app:snapGravity="top"
                app:snapMaxFlingSizeFraction="20"
                app:snapScrollMsPerInch="50"
                tools:listitem="@layout/item_layout" />

        </LinearLayout>

    </LinearLayout>
</layout>